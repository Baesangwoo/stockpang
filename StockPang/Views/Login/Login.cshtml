@{ string msg = ViewData["msg"] as string; }
<div class="auth-wrapper d-flex no-block justify-content-center align-items-center position-relative"
     style="background:url(../assets/images/big/auth-bg.jpg) no-repeat center center;">
    <div class="auth-box row">
        <div class="col-lg-5 col-md-7 bg-white">
            @if (string.IsNullOrWhiteSpace(msg) == false)
            {
                <div class="alert alert-danger">@msg</div>}
            <div class="p-3">
                <h2 class="mt-3 text-center">스톡팡</h2>
                <p class="text-center">로그인</p>
                <form id="form1" method="post" action="Login" class="mt-4">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label class="text-dark" for="uname">아이디</label>
                                <input name="user_id" class="form-control" type="text" placeholder="아이디">
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label class="text-dark" for="pwd">비밀번호</label>
                                <input name="user_pw" class="form-control" type="password" placeholder="비밀번호">
                            </div>
                        </div>
                        <div class="col-lg-12 text-center">
                            <button type="submit" class="btn btn-block btn-dark">로그인</button>
                        </div>
                        <div class="col-lg-12 text-center mt-5" style="font-size:small">
                            회원이 아니신가요? <a href="/Login/Register" class="text-danger">무료회원가입</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-lg-7 col-md-5 modal-bg-img bg-white" style="background-image: url(/Content/image/Login_2.jpeg); background-size: 100%; background-repeat: no-repeat; ">
        </div>
    </div>
</div>
