@{ string msg = ViewData["msg"] as string; }
<div class="auth-wrapper d-flex no-block justify-content-center align-items-center position-relative"
     style="background:url(../assets/images/big/auth-bg.jpg) no-repeat center center;">
    <div class="auth-box row">
        <div class="col-lg-12 col-md-12 bg-white">
            @if (string.IsNullOrWhiteSpace(msg) == false)
            {
                <div class="alert alert-danger">@msg</div>}
            <div class="p-3">
                <h2 class="mt-3 text-center">스톡팡</h2>
                <p class="text-center">회원가입</p>
                <form id="form1" method="post" action="/login/Register" class="mt-4">
                    <div class="row">
                        <div class="form-group col-lg-8">
                            <input name="user_id" class="form-control" type="text" placeholder="아이디">
                        </div>
                        <div class="form-group col-lg-4">
                            <button type="button" id="idchekBtn" class="btn btn-block btn-dark">중복확인</button>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-lg-12">
                            <input name="user_pw" class="form-control" type="password" placeholder="암호">
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-lg-12">
                            <input name="user_pw_check" class="form-control" type="password" placeholder="암호확인">
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-lg-8">
                            <input name="user_nickname" class="form-control" type="text" placeholder="닉네임">
                        </div>
                        <div class="form-group col-lg-4">
                            <button type="button" id="NickNamechekBtn" class="btn btn-block btn-dark">중복확인</button>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-lg-12">
                            <input name="User_mobile" class="form-control" type="tel" placeholder="핸드폰번호">
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-lg-12">
                            <input name="user_email" class="form-control" type="email" placeholder="이메일">
                        </div>
                    </div>
                    <div class="col-lg-12 text-center">
                        <button type="submit" class="btn btn-block btn-dark">회원가입</button>
                    </div>
                    <div class="col-lg-12 text-center mt-5" style="font-size:small">
                        이미 계정이 있으신가요? <a href="/Login/Login">로그인</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
